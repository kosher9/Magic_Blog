<div>
  <%= link_to new_user_post_path(@user.id), class: "link-info" do %>
    <button>Create new post</button>
  <% end %>
</div>
<div class="users-ctn">
  <%# unless @users.empty? %>
  <% @users.each do |user| %>
    <div class="user-ctn">
      <%#= image_tag( user.photo, size: "50x50") %>
      <img src="<%= user.photo %>" alt="image">
      <%= link_to user_path(user.id), class: "link-info" do %>
        <div class="user-l-info">
          <h5><%= user.name %></h5>
          <h5>Number of posts : <%= user.posts.count %></h5>
        </div>
      <% end %>
    </div>
  <% end %>
    <%# %>
</div>